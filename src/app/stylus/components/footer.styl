@import '../variables.styl'

.footer
  position absolute
  bottom 0px
  width 100%
  height 50px
  padding 5px 0px
  border-top 3px solid color_red
  background #222
  
  &_desc 
    line-height 40px  
    font-weight 300
    opacity 0.9
    
  & .container {
    line-height 40px
  }

  &_logo 
      font-size 20px
      font-weight bold
      font-family "Helvetica Neue",Helvetica,Arial,sans-serif 
      
  &_mail
    color white
    opacity 0.85
     
    &:hover
      color white
      text-decoration underline
      
