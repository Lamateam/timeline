@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic&subset=latin,cyrillic-ext,latin-ext,cyrillic')

import_tree('./components')
import_tree('./mixins')

webfont(HelveticaNeueCyr-Bold,HelveticaNeue, false,normal, bold)

@import 'variables.styl'

/* Global styles*/

body 
  min-height 100vh
  height 100%

.wow
  visibility hidden

.red 
  color color_red
  
.white
  color white

.black
  color black
  
span
  color white  

a
  cursor pointer
  transition 300ms all ease-in
  
a:hover
  text-decoration none
  color color_red_hover
  
h1, h2 
  margin 0px
h2
  font-weight 300
  font-size 34px
  color white
body
  opacity 1
  min-height 100%
  font-family 'Open Sans', sans-serif
  font-weight 300
  font-size 14px

div.background   
  z-index -1
  position absolute
  left 0px
  top 0px
  background url(images/background.jpg)
  background-size cover
  height 100%
  width 100%
   
  &::after
    display block
    content ''
    position absolute
    left 0
    width 100%
    height 100%
    top 0
    background rgba(33,47,51,0.6)
    z-index 1
  
div.main
  z-index 2
  min-height 100%
  padding-top 140px
  padding-bottom 90px
  position relative
  min-height 100vh
  
.login_form
  padding-top 50px
  
  &_account-wall
    position relative
    margin 0 auto
    width 270px
    box-shadow(0px 2px 2px rgba(0, 0, 0, 0.3))
    border-radius(10px)
    padding 30px 5px 24px 5px
    background-color #f7f7f7

  & h2 
    font-size 40px
    margin 0 auto
    padding: 0 0 15px 0
    font-weight 700
    
  & form 
    padding 15px
    margin 0 auto
  
  &_btn
    width 100%
    color white
    height 42px
    line-height 26px
    padding 7px
    background color_red
    outline none!important
    border-color color_red
    text-transform uppercase
    font-size 16px
    
    &:hover, &:active
      background color_red_hover
      outline none
      color white
      border-color color_red_hover
      
    
  & form input
    border-radius 10px
    padding 10px
    font-size 16px
    height 42px
    line-height 42px 
    box-sizing border-box  
    width 100%
    outline-color color_red
    margin-bottom -1px
    border-radius(6px 6px 0px 0px)
      
    & + input
      margin-bottom 10px
      border-radius(0px 0px 6px 6px)
      
      

       


